%nav
  %ul
    - @entries.each do |entry|
      %li
        = link_to "#{entry.id}. #{entry.title}", entry_path(entry)
        |
        = link_to "[Edit]", edit_entry_path(entry)
        |
        = link_to "[Delete]", entry_path(entry),
          method: :delete,
          data: { confirm: "Do you want to delete entry no. #{entry.id}?" }

  %p
    = link_to 'Add entry', new_entry_path
  %p
    = link_to "Main Menu", root_path

- content_for(:title) do
  List of Entries
